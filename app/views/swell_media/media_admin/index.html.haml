


.container-fluid
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					= link_to 'Admin', admin_index_path
				%li
					%strong
						Media Admin

		.col-xs-2
			%a.btn.btn-success{ data: { toggle: :modal, target: '#new_media' } }
				%i.fa.fa-plus-square
				New
	.row
		.col-xs-6
			= raw paginate @media
		.col-xs-6
			= form_tag media_admin_index_path, method: :get, class: 'pull-right form-inline' do
				= select_tag :status, options_from_collection_for_select( SwellMedia::Media.statuses, :first, :first, params[:status] ), { prompt: "-- All --", class: 'form-control' }
				= text_field_tag :q, params[:q], class: 'form-control'
				= submit_tag 'Search', class: 'btn btn-primary'
				= link_to 'Clear', media_admin_index_path, class: 'btn btn-default btn-xs'

	.row
		.col-xs-12
			%table.table
				%thead
					%th
					%th
						Title
						%a{ href: media_admin_index_path( sort_by: 'title', sort_dir: 'asc' ) }
							%i.fa.fa-arrow-up
						%a{ href: media_admin_index_path( sort_by: 'title', sort_dir: 'desc' ) }
							%i.fa.fa-arrow-down
					%th
						Publish
						%a{ href: media_admin_index_path( sort_by: 'publish_at', sort_dir: 'asc' ) }
							%i.fa.fa-arrow-up
						%a{ href: media_admin_index_path( sort_by: 'publish_at', sort_dir: 'desc' ) }
							%i.fa.fa-arrow-down
					%th
						Words
						%a{ href: media_admin_index_path( sort_by: 'cached_word_count', sort_dir: 'asc' ) }
							%i.fa.fa-arrow-up
						%a{ href: media_admin_index_path( sort_by: 'cached_word_count', sort_dir: 'desc' ) }
							%i.fa.fa-arrow-down
					%th Status
					%th Path
					%th Type
					%th Category
					%th
				%tbody
					- @media.each do |media|
						%tr
							%td
								= image_tag media.avatar, width: 50, class: 'img img-rounded'
							%td
								= link_to media.title, edit_media_admin_path( media.id )
							%td
								= media.publish_at.to_s( :slashed_time )
							%td
								= media.try( :cached_word_count ) || 'N/A'
							%td
								- if media.published?
									.badge{ class: media.status }
										Live
								- elsif media.draft?
									.badge{ class: media.status }
										Draft
								- elsif media.active?
									.badge{ class: 'pending' }
										Pending
								- else
									.badge{ class: media.status }
										= media.status
							%td
								= media.path
							%td
								= media.type || 'None'
							%td
								= media.category.try( :name ) || 'None'
							%td
								.btn-group
									%button.btn.btn-mini.btn-default.dropdown-toggle{ data: { toggle: :dropdown } }
										%i.fa.fa-cog
										%b.caret
									%ul.dropdown-menu
										%li
											%a{ href: edit_media_admin_path( media.id ) }
												%i.fa.fa-pencil
												Edit
										%li
											%a{ href: preview_media_admin_path( media.id ) }
												%i.fa.fa-eye
												Preview
										%li.divider
										%li
											%a{ href: media_admin_path( media ), data: { method: 'delete', confirm: 'Are you sure?' } }
												%i.fa.fa-trash-o
												Delete!

- if SwellMedia::Media.trash.present?
	.pull-right{ style: 'margin-right:2em;' }
		%a{ href: empty_trash_media_admin_index_path, data: { method: 'delete', confirm: 'Are you sure?' } }
			%btn.btn.btn-danger
				empty trash

= render 'new_modal'