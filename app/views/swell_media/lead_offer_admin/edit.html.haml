
.container-fluid
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					= link_to 'Admin', admin_index_path
				%li
					= link_to 'Lead Offer Admin', lead_offer_admin_index_path
				%li
					%strong
						Edit
						= @offer.title
	
	= form_for @offer, url: lead_offer_admin_path( @offer ) do |f|
	
		.row
			.col-xs-8
				.form-group
					= f.text_field :title, class: 'form-control input-lg'

				.form-group
					= f.label :slug_pref, 'URL for this offer:'
					.input-group
						%span.input-group-addon
							= "#{SwellMedia.app_host}/get/"
						= f.text_field :slug_pref, class: 'form-control', placeholder: @offer.slug


				.row
					.col-xs-4
						.form-group
							= f.label :avatar, 'Image (default):'
							= image_tag @offer.avatar, class: 'img-responsive', id: 'offer_avatar_img'
							%div{ style: 'text-align:center;padding:0.3em;' }
								%a{ href: '#', data: { toggle: :assetup, for: '#offer_avatar,#offer_avatar_img', asset: { asset_type: 'image', use: 'avatar', status: 'active', parent_obj_id: @offer.id, parent_obj_type: @offer.class.name }.to_json, params: { authenticity_token: form_authenticity_token() }.to_json } }
									%i.fa.fa-upload
									upload
							= f.hidden_field :avatar, class: 'form-control', id: 'offer_avatar'

					.col-xs-4
						.form-group
							= f.label :cover_image, 'Image (cover):'
							= image_tag @offer.cover_image, class: 'img-responsive', id: 'offer_cover_image_img'
							%div{ style: 'text-align:center;padding:0.3em;' }
								%a{ href: '#', data: { toggle: :assetup, for: '#offer_cover_image, #offer_cover_image_img', asset: { asset_type: 'image', use: 'avatar', status: 'active', parent_obj_id: @offer.id, parent_obj_type: @offer.class.base_class.name }.to_json, params: { authenticity_token: form_authenticity_token() }.to_json } }
									%i.fa.fa-upload
									upload
							= f.hidden_field :cover_image, class: 'form-control', id: 'offer_cover_image'

				.form-group
					= f.label :description
					= f.text_area :description, class: 'form-control wysiwyg', data: { wysiwyg: { height_min: 100, toolbar_sticky: true, toolbar_preset: 'admin_default', asset_manager: swell_media.asset_manager_index_path( asset: { parent_obj_type: @offer.class.name, parent_obj_id: @offer.id }, request_forgery_protection_token.to_s => form_authenticity_token, response: :json ) }.to_json }

				.form-group
					= f.label :item_name
					= f.text_field :item_name, class: 'form-control'

				.form-group
					= f.label :submit_label
					= f.text_field :submit_label, class: 'form-control'
				.form-group
					= f.label :thank_you_msg
					= f.text_area :thank_you_msg, class: 'form-control'
				.form-group
					= f.label :email_subject
					= f.text_field :email_subject, class: 'form-control'
				.form-group
					= f.label :email_msg
					= f.text_area :email_msg, class: 'form-control'


			.col-xs-4
				.well

					.form-group
						= f.label :status
						= f.collection_select :status, SwellMedia::Article.statuses, :first, :first, {}, class: 'form-control'

					.form-group
						= f.submit 'Update', class: 'btn btn-primary'